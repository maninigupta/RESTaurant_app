<h1>Menu</h1>
<h3><a href="/foods/new">Add New Item</a></h3>

<table cellpadding="10">
	<thead>
		<th>ID</th>
		<th>Course</th>
		<th>Item</th>
		<th>Price</th>
		<th>Allergens?</th>
	</thead>
	<% @foods.each do |food| %>
	<body>
		<tr>
			<td><%=food.id %></td>
			<td><%= food.course %></td>
			<td><a href="/foods/<%= food.id %>"><%= food.name %></a></td>
			<td>$<%= food.price %></td>
			<td><%= food.any_allergens %></td>
		</tr>
	</body>
	<% end %>	
</table>